<h2  class="page-header">
    Author Name: <%= author.name %>
</h2>
<div class="btn-row form-row-end">
    <a href="/authors/<%=author.id%>/edit" class="btn btn-primary">Edit</a>
    <%- include('../partials/delete_form.ejs', {
        url:`/authors/${author.id}`
    })%>
</div>

<% if(booksByAuthor.length > 0){%>
    <h2 class="page-header">Books By Author:</h2>
    <%- include('../partials/bookGrid.ejs', {
        books:booksByAuthor
    })%>
<%}%>